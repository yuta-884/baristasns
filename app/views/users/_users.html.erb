<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.avatar %>
          <%= image_tag user.thumbnail, class: "rounded-circle" %>
        <% else %>
          <i class="fas fa-user-circle fa-5x"></i>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <% if user.kind %>
              <p>バリスタ</p>
            <% else %>
              <p>ユーザ</p>
            <% end %>
          </div>
          <div>
            <p><%= link_to user.profile, user_path(user) %></p>
          </div>
          <div>
            <% if user.sns? %>
              <%= link_to "SNS", user.sns %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>